<head>
  <link rel="stylesheet" type="text/css" href="/css/login.css">
</head>
<div class="container">
  <form action="/login" method="post">
    <div class="input-group">
      <span class="input-group-addon"><i class="glyphicon glyphicon-user login_username_icon"></i></span>
      <input type="text" class="form-control login_fleid" name="name" placeholder="Name">
    </div>
    <div class="input-group">
      <span class="input-group-addon"><i class="glyphicon glyphicon-lock login_password_icon"></i></span>
      <input type="password" class="form-control login_fleid" name="password" placeholder="Password">
    </div>
    <div>
      <div class="checkbox remember_me">
        <label><input type="checkbox" value="">Remember Me</label>
      </div>
      <a href="#" class="forget_password">Forget Password?</a>
    </div>
    <button type="submit" class="btn btn-primary login-button">LOGIN</button>
  </form>
</div>
